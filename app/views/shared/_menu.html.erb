<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><%= nav_tab 'Главная', root_path,
            class: 'nav-link px-2', current_page: current_page %></li>
          <li><%= nav_tab 'Статьи', questions_path,
            class: 'nav-link px-2', current_page: current_page %></li>
        </ul>

        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li>
              <a class="nav-link px-2 text-white" href="#">
                <%= current_user.name %>
              </a>     
                </li>
                    <%= nav_tab 'Редактирование профиля', edit_user_path(current_user),
                    class: 'nav-link px-2' %>                    
                    <%= nav_tab 'Выход', session_path,
                    class: 'nav-link px-2', data: {turbo_method: :delete} %>                             
            </li>
            
          <% else %>
            <li><%= nav_tab 'Регистрация', new_user_path,
              class: 'nav-link px-2', current_page: current_page %></li>
            <li><%= nav_tab 'Вход', new_session_path,
              class: 'nav-link px-2', current_page: current_page %></li>             
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>