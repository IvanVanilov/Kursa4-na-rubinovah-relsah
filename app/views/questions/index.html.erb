<% provide :page_title, 'Статьи' %>
<% currently_at 'Статьи' %>

<h1 class="mb-4">Статьи</h1>

<%= link_to 'Новая статья', new_question_path, class: 'btn btn-primary btn-lg' %>
<% @questions.each do |question| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h2>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= question.body %>
        </p>
      </section>

      <%= link_to 'Подробнее', question_path(question), class: 'btn btn-primary' %> 
      <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary' %>
      <%= link_to "Удалить", question_path(question), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-danger'%>
    </div>
  </article>
<%end%>

<%== pagy_bootstrap_nav @pagy %>