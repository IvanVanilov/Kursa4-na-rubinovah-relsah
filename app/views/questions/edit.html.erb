<% currently_at 'Статьи' %>

<% provide :page_title, "Редактирование статьи" %>


<h1 class="mb-4">Изменить статью</h1>

<%= form_with model: @question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Заголовок %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title,  required: true, minlength: 2, placeholder: 'Заголовок', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :Содержание %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, required: true, minlength: 2, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Изменить статью!", class: 'btn btn-primary' %>
<% end %>